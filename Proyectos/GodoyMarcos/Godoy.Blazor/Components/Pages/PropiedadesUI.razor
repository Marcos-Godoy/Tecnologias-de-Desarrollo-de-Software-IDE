@page "/propiedades"
@rendermode InteractiveServer

@inject IJSRuntime JSRuntime

@if (!error)
{
    @if (propiedades== null)
    {
        <div class="d-flex align-items-center mt-3">
            <h2 class="me-3">Propiedades</h2>
            <img class="pb-2" style="width:35px" src="https://media.tenor.com/On7kvXhzml4AAAAj/loading-gif.gif" />
        </div>
    }
    else
    {
        <div class="d-flex align-items-center justify-content-between mt-3">
            <h2>Propiedades</h2>
            
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary btn-lg" href="propiedad">
                Agregar
            </a>
            <a class="btn btn-secondary btn-lg" @onclick="OnInitializedAsync">
                Recargar
            </a>
        </div>
        

        @if (propiedades.Count() == 0)
        {
            <div class="alert alert-primary fw-bold mt-3" role="alert">
                No hay propiedades registradas
            </div>
        }
        else
        {
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Tipo Propiedad</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>Habitaciones</th>
                        <th>Metros Cuadrados</th>
                        <th>Precio</th>
                        <th>Fecha Alta</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var propiedad in propiedades)
                    {
                        <tr>
                            <td style="vertical-align: middle;">@propiedad.IdTipoPropiedad</td>
                            <td style="vertical-align: middle;">@propiedad.Titulo</td>
                            <td style="vertical-align: middle;">@propiedad.Descripcion</td>
                            <td style="vertical-align: middle;">@propiedad.CantidadHabitaciones</td>
                            <td style="vertical-align: middle;">@propiedad.M2</td>
                            <td style="vertical-align: middle;">@propiedad.Precio</td>
                            <td style="vertical-align: middle;">@propiedad.FechaAlta</td>
                            <td class="d-flex justify-content-end">
                                <a class="btn btn-primary btn-sm" href="propiedad/@propiedad.Id">
                                    Modificar
                                </a>
                                <button class="btn btn-danger btn-sm ms-2" @onclick="(() => EliminarPropiedad(propiedad.Id))">
                                    Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
}
else
{
    <h2 class="mt-3">Propiedades</h2>
    <div class="alert alert-danger fw-bold my-3" role="alert">
        Error al conectarse a la base de datos!
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary" @onclick="OnInitializedAsync">Reintentar</button>
    </div>
}


@code {
    IEnumerable<Propiedad> propiedades;
    IEnumerable<TipoPropiedad> tiposPropiedades;
    bool error;

    protected override async Task OnInitializedAsync()
    {
        propiedades = null;
        error = false;
        try
        {
            propiedades = await PropiedadApiClient.GetAllAsync();
            tiposPropiedades = await TipoPropiedadApiClient.GetAllAsync();
        }
        catch (Exception)
        {
            error = true;
        }
    }


    private async void EliminarPropiedad(int id)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Estás seguro de que deseas eliminar?");
        if (confirm)
        {
            await PropiedadApiClient.DeleteAsync(id);
        }
    }
}